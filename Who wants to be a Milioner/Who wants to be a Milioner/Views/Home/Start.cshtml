
 <!doctype html>
    <html>
    <head>
        <meta charset="utf-8" />
        <link rel="stylesheet" type="text/css" href="~/css/StyleSheet.css" />
    </head>
    <body>
        <header>
            <h1 class="h1" align="center">Игра</h1>
        </header>
        <main>
            
            <form method="get" action="/Home/Start">
                <div align="center">
                    <p class="quest">@ViewBag.Question1</p>


                </div>

                <div>
                    @{
                        if (ViewBag.Question1 == "Вы проиграли" || ViewBag.Question1 == "Вы выйграли")
                        {

                            @:<div>
                                @:<div align="center">
                                    @:<input class="button" id="button" type="hidden" name="thisAnswer" value="@ViewBag.Answer1" />
                                    @:<input class="button" id="button" type="hidden" name="thisAnswer" value="@ViewBag.Answer2" />
                                @:</div>
                            @:</div>
                        }
                        else
                        {
                            if (ViewBag.Answer1 == null)
                            {
                                @:<div>
                                    @:<div align="center">
                                        @:<input class="button" id="button" type="hidden" name="thisAnswer" value="@ViewBag.Answer1" />
                                    @:</div>
                                @:</div>
                            }
                            else
                            {
                                @:<div>
                                    @:<div align="center">
                                        @:<input class="button" id="button" type="submit" name="thisAnswer" value="@ViewBag.Answer1" />
                                    @:</div>
                                @:</div>
                            }
                            if (ViewBag.Answer2 == null)
                            {
                                @:<div>
                                    @:<div align="center">
                                        @:<input class="button" id="button" type="hidden" name="thisAnswer" value="@ViewBag.Answer2" />
                                    @:</div>
                                @:</div>
                            }
                            else
                            {
                                @:<div>
                                    @:<div align="center">
                                        @:<input class="button" id="button" type="submit" name="thisAnswer" value="@ViewBag.Answer2" />
                                    @:</div>
                                @:</div>
                            }
                        }
                    }


                    @{
                        if (ViewBag.Question1 == "Вы проиграли" || ViewBag.Question1 == "Вы выйграли")
                        {

                            @:<div>
                                @:<div align="center">
                                    @:<input class="button" id="button" type="hidden" name="thisAnswer" value="@ViewBag.Answer3" />
                                    @:<input class="button" id="button" type="hidden" name="thisAnswer" value="@ViewBag.Answer4" />
                                @:</div>
                            @:</div>
                        }
                        else
                        {
                            if (ViewBag.Answer3 == null)
                            {
                                @:<div>
                                    @:<div align="center">
                                        @:<input class="button" id="button" type="hidden" name="thisAnswer" value="@ViewBag.Answer3" />
                                    @:</div>
                                @:</div>
                            }
                            else
                            {
                                @:<div>
                                    @:<div align="center">
                                        @:<input class="button" id="button" type="submit" name="thisAnswer" value="@ViewBag.Answer3" />
                                    @:</div>
                                @:</div>
                            }
                            if (ViewBag.Answer4 == null)
                            {
                                @:<div>
                                    @:<div align="center">
                                        @:<input class="button" id="button" type="hidden" name="thisAnswer" value="@ViewBag.Answer4" />
                                    @:</div>
                                @:</div>
                            }
                            else
                            {
                                @:<div>
                                    @:<div align="center">
                                        @:<input class="button" id="button" type="submit" name="thisAnswer" value="@ViewBag.Answer4" />
                                    @:</div>
                                @:</div>
                            }

                        }
                    }
                </div>
                <div align="center">
                    <p class="quest">Сумма выйгрыша: @ViewBag.Score</p>
                </div>
                <div>
                    <div>
                        <div align="right" style="width:20%;position:absolute;right:10px">
                            @{
                                if (Quest.Fifty || (ViewBag.Question1 == "Вы проиграли" || ViewBag.Question1 == "Вы выйграли"))
                                {
                                    @:<input class="button" id="button" type="hidden" name="fifty" value="50/50" />
                                }
                                else
                                {
                                    @:<input class="button" id="button" type="submit" name="fifty" value="50/50" />
                                }
                            }
                        </div>
                    </div>
                </div>

            </form>
            <form method="get" action="/Home/Start">
                <div align="left" style="width:20%">
                    <input class="button" type="submit" name="BackToStart" value="Назад" />
                </div>
            </form>
        </main>
    </body>
</html>

