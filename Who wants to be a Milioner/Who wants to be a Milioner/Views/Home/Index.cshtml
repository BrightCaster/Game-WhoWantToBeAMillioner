@{
    ViewData["Title"] = "Home Page";
}


<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" type="text/css" href="~/css/StyleSheet.css" />
</head>
<body>
    <header>
        <h1 class="introd">Кто хочет стать миллионером</h1>
